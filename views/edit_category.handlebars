<h1>Edit category</h1><br>

<form class="form-horizontal" action="/categories/update/{{data.cat_id}}" method="POST">

	<div class="">
		<div class="form-group">
			<label for="form-control" class="col-sm-2 control-label">Category Name</label>
			<div class="col-sm-4">
				<input type="text" class="form-control" name="cat_name" value="{{data.cat_name}}">
			</div>
		</div>
	</div>

	<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-info">Submit</button>
    </div>
	</div>
</form>
