
<h1>Add sale</h1><br>


<form class="form-horizontal" action="/sales/add" method="POST">

	<div class="form-group">
		<label for=""class="col-sm-2 control-label">Sales Date</label>
		<div class="col-sm-2">
		<input type="date" class="form-control" name="sales_date" value="{{sales_date}}">
	</div>
	</div>

	<div class="form-group">
		<label for=""class="col-sm-2 control-label">Prod ID</label>
		<div class="col-sm-3">
		<select class="form-control" name="prod_id">
			{{#products}}
				<option value="{{prod_id}}">{{product_name}}</option>
			{{/products}}
		</select>
	</div>
	</div>

	<div class="form-group">
		<label for=""class="col-sm-2 control-label">Sales Quantity</label>
		<div class="col-sm-2">
		<input type="number" class="form-control" name="sales_quantity" value="{{sales_quantity}}">
	</div>
	</div>

	<div class="form-group">
		<label for=""class="col-sm-2 control-label">Sales Unit Price</label>
		<div class="col-sm-2">
		<input type="number"class="form-control" step="0.01" min="0" name="sales_unit_price" value="{{sales_unit_price}}">
	</div>
	</div>

	<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
				<div class="col-sm-0">
        <button type="submit" class="btn btn-info">Submit</button>
       </div>
 	  </div>
	</div>

</form>
